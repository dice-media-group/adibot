<p id="notice"><%= notice %></p>

<h1>Billing Addresses</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Country</th>
      <th>House nb</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @billing_addresses.each do |billing_address| %>
      <tr>
        <td><%= billing_address.first_name %></td>
        <td><%= billing_address.last_name %></td>
        <td><%= billing_address.address_1 %></td>
        <td><%= billing_address.address_2 %></td>
        <td><%= billing_address.city %></td>
        <td><%= billing_address.state %></td>
        <td><%= billing_address.zip_code %></td>
        <td><%= billing_address.country %></td>
        <td><%= billing_address.house_nb %></td>
        <td><%= billing_address.phone %></td>
        <td><%= link_to 'Show', billing_address %></td>
        <td><%= link_to 'Edit', edit_billing_address_path(billing_address) %></td>
        <td><%= link_to 'Destroy', billing_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

