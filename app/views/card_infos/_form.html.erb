<%= simple_form_for(@card_info) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :card_nickname %>
    <%= f.input :card_type %>
    <%= f.input :name_on_card %>
    <%= f.input :card_number %>
    <%= f.input :exp_month %>
    <%= f.input :exp_year %>
    <%= f.input :ccv %>
    <%= f.input :email %>
    <%= f.input :birthday %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
