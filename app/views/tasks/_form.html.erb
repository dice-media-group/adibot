<div class="row">
<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <fieldset class="fieldset">
      <legend>Site Registration &amp; Payment</legend>
      <div class="row">
        <div class="medium-6 columns">
          <%= f.association :site_account, label_method: :nickname, value_method: :id %>        
        </div>
        <div class="medium-6 columns">
          <%= f.association :billing_profile, label_method: :nickname, value_method: :id %>        
        </div>
      </div>
    </fieldset>
    <fieldset class="fieldset">
      <legend>Shoe size &amp; style</legend>

      <div class="row">
        <div class="medium-6 columns">
              <%= f.input :shoe_size %>
        </div>
        <div class="medium-6 columns">
          <%= f.input :style_no %>
        </div>
      </div>
    </fieldset>

    <fieldset class="fieldset">
      <legend>Notification</legend>
      <div class="row">
        <div class="medium-6 columns">
          <%= f.input :positive_key_word %>
        </div>
        <div class="medium-6 columns">
          <%= f.input :negative_key_word %>
        </div>
      </div>
      <div class="row">
        <div class="medium-6 columns">
          <%= f.input :early_link %>
        </div>
        <div class="medium-6 columns">
          <%= f.input :page_monitor %>
        </div>
      </div>
    </fieldset>    
    
    
    
    
    <fieldset class="fieldset">
      <legend>Notification</legend>
      <%= f.input :notification_text_no %>
      <%= f.input :notification_email %>
    </fieldset>
  </div>
  <div class="row">
    <div class="medium-6 columns"></div>
    <div class="medium-6 columns">
      <div class="form-actions">
        <%= f.button :submit, class: "button expanded"  %>
      </div>      
    </div>
    
  </div>
<% end %>
  
