<%= simple_form_for(@shipping_address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :address_1 %>
    <%= f.input :address_2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip_code %>
    <%= f.input :country %>
    <%= f.input :house_nb %>
    <%= f.input :phone %>
    <%= f.input :same_as_billing %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
